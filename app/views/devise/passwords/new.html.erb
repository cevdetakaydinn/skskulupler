<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-5">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Şifremi unuttum ?</h3>
        </div>
        <div class="panel-body">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form_control" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Parola sıfırlama yönergeleri bana gönder.", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
        </div>
        </div>
      </div>
    </div>
