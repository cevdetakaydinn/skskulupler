<%= render "header" %>

<div class="row">
	<div class="col-md-3">
		<div class="panel panel-danger">
		  <div class="panel-heading">
		    <h3 class="panel-title">Topluluklar<% if user_signed_in? %>Ä±m<% end %></h3>
		  </div>
		  <div class="panel-body">
		    <div class="list-group">
			  <% @Club.each do |club| %>
			  
			  <%= link_to club.name, club, class: "list-group-item" %>
			  
			  <% end %>
			</div>
		  </div>
		</div>
	</div>
	<div class="col-md-6">
		<div class="panel panel-warning">
		  <div class="panel-heading">
		    <h3 class="panel-title">Etkinlikler</h3>
		  </div>
		  <div class="panel-body">
		    <div class="list-group">
			  <% @Activities.each do |activity| %>
            
	            <%= link_to activity.title, activity, class: "list-group-item" %>
	          <% end %>

			</div>
		  </div>
		</div>
		<div class="panel panel-primary">
		  <div class="panel-heading">
		    <h3 class="panel-title">Haberler</h3>
		  </div>
		  <div class="panel-body">
		    <div class="list-group">
			  <% @News.each do |news| %>
            
	            <%= link_to news.title, news, class: "list-group-item" %>
	          <% end %>
			</div>
		  </div>
		</div>
	</div>
	<div class="col-md-3">
		<div class="panel panel-success">
		  <div class="panel-heading">
		    <h3 class="panel-title">Duyurular</h3>
		  </div>
		  <div class="panel-body">
		    <div class="list-group">
			  <% @Notice.each do |notice| %>
            
	            <%= link_to notice.title, notice, class: "list-group-item" %>
	          <% end %>
			</div>
		  </div>
		</div>
		
	</div>
</div>



